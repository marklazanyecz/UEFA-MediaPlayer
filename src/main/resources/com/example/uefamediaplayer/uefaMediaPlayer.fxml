<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.uefamediaplayer.uefaMediaPlayerController">
   <left>
      <HBox fx:id="sideBar" fillHeight="false">
         <ListView fx:id="menuList" HBox.hgrow="NEVER" />
         <ListView fx:id="mediaList" />
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </left>
   <center>
      <VBox fx:id="mediaStack" alignment="TOP_CENTER" BorderPane.alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
         <StackPane fx:id="stackPane" VBox.vgrow="ALWAYS">
            <MediaView fx:id="mediaView" />
            <Rectangle fx:id="darkOverlay" arcHeight="5.0" arcWidth="5.0" opacity="0.5" stroke="BLACK" strokeType="INSIDE" />
            <ImageView fx:id="infoPanel" preserveRatio="true" />
         </StackPane>
         <Slider fx:id="mediaSlider" />
         <HBox alignment="CENTER" spacing="10">
            <Button fx:id="mediaButton" mnemonicParsing="false" onAction="#pauseMedia" text="PLAY" textAlignment="CENTER" textFill="WHITE" />
            <Button fx:id="infoButton" mnemonicParsing="false" onAction="#showInfo" text="INFO" textAlignment="CENTER" textFill="WHITE" />
         </HBox>
      </VBox>
   </center>
</BorderPane>